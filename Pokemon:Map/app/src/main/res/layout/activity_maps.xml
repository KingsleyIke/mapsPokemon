<androidx.coordinatorlayout.widget.CoordinatorLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
android:layout_height="match_parent"
android:fitsSystemWindows="true">

<fragment
    android:id="@+id/map"
    class="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

<com.google.android.material.imageview.ShapeableImageView
    android:id="@+id/pokemoon"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_gravity="bottom|end"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="112dp"
    app:shapeAppearanceOverlay="@style/round_image"
    android:background="@drawable/pokemoon_imgae"
    />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/map_type_Normal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="190dp"
        android:background="@drawable/normal_map"
        app:shapeAppearanceOverlay="@style/round_image" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/satelite_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="190dp"
        android:background="@drawable/satelite_image"
        app:shapeAppearanceOverlay="@style/round_image" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>